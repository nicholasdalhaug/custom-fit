            "browser": true,
            "es6": true,
            "jquery": true
        },
        "extends": [
            "eslint:recommended"
        ],
        "parserOptions": {
            "sourceType": "module"
        },
        "rules": {
            "no-console": 0,
            "indent": [
                "error",
                2
            ],
            "linebreak-style": [
                "error",
                "unix"
            ],
            "quotes": [
                "error",
                "double",
                "single"
            ]
        }
    },
    "dependencies": {
        "live-server": "^1.2.1"
    },
    "devDependencies": {
        "gh-pages": "^2.2.0"
